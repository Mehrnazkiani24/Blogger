<div class="text-center">
  <h2>Title: {{name}}</h2>
  <p>Description: {{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <p>
    <button class="btn btn-primary">Update this blogpost!</button>
  </p>
</div>
<form class="form add-comment" data-blogid = {{id}}>
  <div class="form-group">
    <label for="email-login">comment:</label>
    <input class="form-input" type="text" id="comment-message" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary"  type="submit">Addcomment</button>
  </div>
</form>


<script src="/js/comment.js"></script>